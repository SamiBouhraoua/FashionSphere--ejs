<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FashionSphere</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <img src="image/img.png" class="header_logo" alt="FashionSphere Logo">
            <span class="FashionSphere">FashionSphere</span>
            <nav class="navbar">
                <a href="/Home"><i class="fas fa-home"></i> Home</a>
                <div class="dropdown">
                    <a href="#"><i class="fas fa-box-open"></i> Product</a>
                    <div class="dropdown-content">
                        <a href="/mens">Men's Wear</a>
                        <a href="/womens">Women's Wear</a>
                        <a href="/accessories">Accessories</a>
                    </div>
                </div>
                <a href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
                <a href="/login"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </nav>
        </div>
    </header>
    <section class="men">
        <div class="container">
            <div class="men-item">
                <img src="image/aa3.png" alt="Image 1">
            </div>
            <div class="men-item">
                <div class="overlay">
                    <img src="image/aa1.png" alt="Image 2">
                </div>
            </div>
            <div class="men-item">
                <div class="overlay">
                    <img src="image/aa2.png" alt="Image 3">
                </div>
            </div>
            <div class="men-item">
                <img src="image/aa4.png" alt="Image 4">
            </div>
        </div>
    </section> 
    <h2 class="h2p">All items</h2> 
    <section class="products">
        <div class="products-container">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <% if (product.Categorie == 'Accessoires') { %>
                        <div class="product-item">
                            <img src="/image/<%= product.Photo %>" alt="Product Image" class="product-image">
                            <h3 class="product-title"><%= product.Description %></h3>
                            <p class="product-price"><%= product.Prix.toLocaleString() %> $</p>
                            <a href="/detailsProduit/<%= product._id %>">
                                <button class="shop-now-btn">Shop now</button>
                            </a>
                        </div>
                    <% } %>
                <% }); %>
            <% } else { %>
                <p class="notfound">No products found.</p>
            <% } %>
        </div>
    </section>  
</body>
</html>
